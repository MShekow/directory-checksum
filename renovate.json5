{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'config:recommended',
    ':disableRateLimiting',
  ],
  labels: [
    'dependencies',
  ],
  vulnerabilityAlerts: {
    labels: [
      'security',
      'dependencies',
    ],
  },
  platformAutomerge: false,
  packageRules: [
    {
      matchDatasources: [
        'go',
        'golang-version',
      ],
      automerge: true,
    },
    {
      matchDepNames: [
        'go',
      ],
      automerge: true,
    },
    {
      description: 'Auto-update GitHub Actions and pin their digest, merging the PRs only after 14 days (hopefully enough time for the community to detect bad releases)',
      matchDepTypes: [
        'action',
      ],
      automerge: true,
      pinDigests: true,
      minimumReleaseAge: '14 days',
    },
  ],
  customManagers: [
    {
      customType: 'regex',
      description: "Match 'somekey: someversion' in GitHub workflow files, assuming a preceding line has this form: # renovate: datasource=... depName=... versioning=",
      managerFilePatterns: [
        '/^\\.github\\/workflows\\/.*\\.ya?ml$/',
      ],
      matchStrings: [
        'datasource=(?<datasource>.*?) depName=(?<depName>.*?)( versioning=(?<versioning>.*?))?\\s *.*: "?(?<currentValue>[a-zA-Z0-9.]*)"?\\s',
      ],
    },
  ],
}
